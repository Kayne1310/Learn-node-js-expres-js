                <li><a href="ListUser">List</a></li>
                <li><a href="#">Test</a></li>
            </ul>
        </div>
    </nav>



    <table>
        <tr>
            <th>User Name</th>
            <th>Password</th>
            <th>email</th>
            <th>Frist Name</th>
            <th>Phone</th>
            <th>Role</th>
            <th>Action</th>
        </tr>
        <% ListUser.forEach(function(user){ %>
        <tr>
            <td><%=user.username%></td>
            <td><%=user.password %></td>
            <td><%= user.email %></td>
            <td><%= user.fname%></td>
            <td><%= user.phone%></td>
            <td><%=user.type%></td>
            <td>
                <button> <a href="/UpdateUser/<%=user.username%>">Edit</a></button>
                <button> <a href="/DeleteUser/<%=user.username%>">Delete</a></button>
            </td>
        </tr>
       <%}) %>
    </table >
</body>

</html>